{
	"name": "@stefanprobst/commitlint-config",
	"version": "1.0.3",
	"license": "MIT",
	"main": "commitlintrc.json",
	"files": [
		"commitlintrc.json"
	],
	"scripts": {
		"changeset:add": "changeset add",
		"changeset:status": "changeset status --verbose",
		"ci:release": "changeset publish",
		"format:check": "prettier . --cache --check --ignore-path .gitignore",
		"format:fix": "pnpm run format:check --write",
		"prepare": "run-s setup",
		"setup": "simple-git-hooks || exit 0",
		"validate": "run-p format:check"
	},
	"packageManager": "pnpm@7.18.1",
	"dependencies": {
		"@commitlint/config-conventional": ">=9"
	},
	"peerDependencies": {
		"@commitlint/cli": ">=9"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.3.0",
		"@stefanprobst/prettier-config": "^3.0.0",
		"lint-staged": "^13.1.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.1",
		"simple-git-hooks": "^2.8.1"
	},
	"commitlint": {
		"extends": "./commitlintrc.json"
	},
	"lint-staged": {
		"*": "prettier --cache --ignore-unknown --write"
	},
	"prettier": "@stefanprobst/prettier-config",
	"simple-git-hooks": {
		"commit-msg": "pnpm exec commitlint --edit",
		"pre-commit": "pnpm exec lint-staged",
		"pre-push": "pnpm run validate"
	}
}
